@page
@model RazorWeb.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Войти";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h2>Войти</h2>
        </div>
        <div class="login-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="control-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="control-label">Пароль</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="custom-checkbox">
                    <input asp-for="Input.RememberMe" type="checkbox" id="rememberMe" />
                    <label for="rememberMe">Запомнить меня</label>
                </div>
                <button type="submit" class="login-button">Войти</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
