<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Мой сайт</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <div class="container">
            <div class="title">My Application</div>
            <button id="menu-toggle" class="btn btn-primary">☰</button>
        </div>
    </header>

    <!-- Добавляем элемент размытия -->
    <div id="blur-background" class="blur-background"></div>

    <nav id="sidebar" class="sidebar">
        <ul>
            @if (User.Identity.IsAuthenticated)
            {
                <li>
                    <form method="post" asp-page="/Account/Logout" id="logoutForm" class="d-inline">
                        <button type="submit" class="btn btn-primary">Выход</button>
                    </form>
                </li>
            }
            else
            {
                <li><a href="/Account/Login" class="btn btn-primary">Войти</a></li>
                <li><a href="/Account/Register" class="btn btn-primary">Регистрация</a></li>
            }
        </ul>
    </nav>

    <div id="overlay" class="overlay"></div>

    <div class="content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
